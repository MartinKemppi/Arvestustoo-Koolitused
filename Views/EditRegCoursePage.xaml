<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Koolitused.Views.EditRegCoursePage"
             Title="Register for Course">
    <VerticalStackLayout Padding="30,0" Spacing="20">
        <Entry Placeholder="First Name" x:Name="FirstNameEntry" />
        <Entry Placeholder="Last Name" x:Name="LastNameEntry" />
        <Entry Placeholder="Phone" x:Name="PhoneEntry" />
        <Entry Placeholder="Email" x:Name="EmailEntry" />
        <Entry Placeholder="Additional Info" x:Name="AdditionalInfoEntry" />
        <Button Text="Register" Clicked="OnRegisterClicked" />
    </VerticalStackLayout>
</ContentPage>
