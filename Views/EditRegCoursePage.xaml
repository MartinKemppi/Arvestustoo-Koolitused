<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Koolitused.Views.EditRegCoursePage"     
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui">
    <ContentPage.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="#7F1425" />
    </ContentPage.Behaviors>
    <VerticalStackLayout Padding="30,0" Spacing="20">
        <Entry TextColor="Black" Placeholder="Eesnimi" x:Name="FirstNameEntry" />
        <Entry TextColor="Black" Placeholder="Perekonnanimi" x:Name="LastNameEntry" />
        <Entry TextColor="Black" Placeholder="Telefon" x:Name="PhoneEntry" />
        <Entry TextColor="Black" Placeholder="Email" x:Name="EmailEntry" />
        <Entry TextColor="Black" Placeholder="Lisa info" x:Name="AdditionalInfoEntry" />
        <Button Text="Registreeri" Clicked="OnRegisterClicked" />
    </VerticalStackLayout>
</ContentPage>
