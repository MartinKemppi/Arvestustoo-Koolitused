<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Koolitused.Models"
             x:Class="Koolitused.Views.EditTeacherPage"
             Title="Muuda Õpetajat">
    <VerticalStackLayout Padding="30,0" Spacing="25" VerticalOptions="Start">
        <Label Text="Muuda Õpetajat" FontSize="36" HorizontalOptions="CenterAndExpand" />

        <Entry x:Name="TeacherNameEntry" Placeholder="Õpetaja Nimi"/>

        <Picker x:Name="RolePicker" Title="Vali Roll"
        ItemsSource="{Binding Roles}"
        ItemDisplayBinding="{Binding Rollnimi}"/>

        <Button Text="Salvesta" Clicked="OnSaveTeacherClicked" HorizontalOptions="CenterAndExpand" WidthRequest="200"/>
    </VerticalStackLayout>
</ContentPage>
