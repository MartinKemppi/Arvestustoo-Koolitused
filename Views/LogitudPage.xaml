<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Koolitused.Views.LogitudPage">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
        VerticalOptions="Start">

        <Image
            Source="tthk.jpg"
            HeightRequest="200"                
            HorizontalOptions="Center" />

        <Label
            Text="Tööstushariduskeskus on piirkonna suurim kutsehariduskool"
            FontSize="24"
            VerticalOptions="Center" />


        <Label
            Text="Meie koolitus võimaldab tõsta oma tööalaseid teadmisi ja oskusi, et saada konkurentsivõimelisemaks tööjõuturul."
            FontSize="18"
            HorizontalOptions="Center" />

        <Button
            x:Name="Logivalja"
            Text="Logi välja"
            TextColor="Black"
            Clicked="OnLogiValjaClicked"
            HorizontalOptions="CenterAndExpand"
            WidthRequest="200"/>
        <Button
            x:Name="Kursid"
            Text="Kursid"
            TextColor="Black"
            WidthRequest="200"
            Clicked="OnKursClicked" />
        <Button
            x:Name="RegistreeriKursileButton"
            Text="Registreeri kursile"
            TextColor="Black"
            Clicked="OnRegistreeriKursileClicked"
            HorizontalOptions="CenterAndExpand"
            WidthRequest="200"/>
        <Button
            x:Name="Minukursid"
            Text="Minu kursid"
            TextColor="Black"
            WidthRequest="200"
            Clicked="OnMinukursClicked" />
        <Button
            x:Name="Info"
            Text="Info"
            TextColor="Black"
            WidthRequest="200"
            Clicked="OnInfoClicked" />
    </VerticalStackLayout>
</ContentPage>