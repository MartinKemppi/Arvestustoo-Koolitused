<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Koolitused.Views.EditCoursePage"
             Title="EditCoursePage">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
        VerticalOptions="Start">

        <Label
            Text="Kursuse andmed"
            FontSize="36"
            HorizontalOptions="CenterAndExpand" />

        <Entry x:Name="CourseNameEntry" Placeholder="Kursuse nimi"/>
        <Entry x:Name="CourseDescriptionEntry" Placeholder="Kursuse kirjeldus"/>

        <Button
            Text="Salvesta"
            Clicked="OnSaveCourseClicked"
            HorizontalOptions="CenterAndExpand"
            WidthRequest="200"/>
    </VerticalStackLayout>
</ContentPage>