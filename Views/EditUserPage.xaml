<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Koolitused.Models"
             x:Class="Koolitused.Views.EditUserPage"
             Title="Muuda Kasutajat">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
        VerticalOptions="Start">

        <Label
            Text="Kasutaja andmed"
            FontSize="36"
            HorizontalOptions="CenterAndExpand" />

        <Entry x:Name="UsernameEntry" Placeholder="Kasutajanimi" />
        <Entry x:Name="PasswordEntry" Placeholder="Salasõna" IsPassword="True" />

        <HorizontalStackLayout>
            <Switch
                x:Name="ShowPasswordSwitch"
                OnColor="White"
                ThumbColor="White"
                IsToggled="False"
                VerticalOptions="Center"
                Toggled="OnShowPasswordToggled"/>
            <Label
                Text="Näita Salasõna"
                VerticalOptions="Center"
                TextColor="White"/>
        </HorizontalStackLayout>

        <Picker x:Name="RolePicker" Title="Vali Roll" />

        <Button
            Text="Salvesta"
            Clicked="OnSaveUserClicked"
            HorizontalOptions="CenterAndExpand"
            WidthRequest="200"/>
    </VerticalStackLayout>
</ContentPage>