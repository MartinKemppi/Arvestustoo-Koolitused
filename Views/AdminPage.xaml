<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Koolitused.Views.AdminPage"
             Title="AdminPage">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
        VerticalOptions="Start">

        <Image
            Source="tthk.jpg"
            HeightRequest="240"                
            VerticalOptions="Start" />
        <Label
            Text="Tere tulemast, Administraator!"
            FontSize="36"
            HorizontalOptions="CenterAndExpand" />

        <Button
            x:Name="ManageCoursesButton"
            Text="Halda kursusi"
            Clicked="OnManageCoursesClicked"
            HorizontalOptions="CenterAndExpand"
            WidthRequest="200"/>
    </VerticalStackLayout>
</ContentPage>